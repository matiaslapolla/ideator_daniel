{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@ideator/core": ["packages/core/src"],
      "@ideator/core/*": ["packages/core/src/*"],
      "@ideator/api": ["packages/api/src"],
      "@ideator/api/*": ["packages/api/src/*"]
    },
    "types": ["bun-types"]
  },
  "exclude": ["node_modules", "dist"]
}
